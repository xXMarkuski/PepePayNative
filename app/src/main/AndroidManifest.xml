<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pepepay.pepepaynative">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.wifi.direct" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity
            android:name=".WalletOverview2"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_wallet_overview2"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".backend.social31.handler.qrCode.QRConnectionHandler$QRConnectionHandlerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_wallet_overview2"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".activities.qr.QRCreatorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>